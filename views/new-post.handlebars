<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input id="title" type="text" name="post-title" class="form-input" />
    <label class="form-label" for="post-body">Content</label>
    <textarea id="body" name="post-body" class="form-input"></textarea>
    <button type="submit" class="btn">Post</button>
  </form>
</div>

<script src="./js/new-post.js"></script>